{
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],

        "module": "ESNext",
        "target": "ESNext",

        "noEmit": true,
        "moduleDetection": "force",
        "esModuleInterop": true,

        "skipLibCheck": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noPropertyAccessFromIndexSignature": true,
        "exactOptionalPropertyTypes": true,
        "noImplicitOverride": true
    },
    "include": ["lib"]
}
