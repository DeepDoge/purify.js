{
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "types": ["vite/client"],

        "module": "ESNext",
        "target": "ESNext",

        "moduleResolution": "Bundler",
        "noEmit": true,
        "moduleDetection": "force",

        "esModuleInterop": true,

        "skipLibCheck": true,
        "strict": true,
        "noPropertyAccessFromIndexSignature": true,
        "exactOptionalPropertyTypes": true,
        "checkJs": true
    },
    "include": ["src"]
}
